{

    "manifest_version": 2,
    "name": "myelife_extension",
    "version": "1.0",
  
    "description": "get data from thoursands of websites",
    "icons": {
      "48": "icons/border-48.png"
    },
    "content_scripts": [
      {
        "matches": ["*://book.douban.com/*"],
        "js": ["douban.book.js"]
      }
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "permissions": ["contextMenus"]
  
  }